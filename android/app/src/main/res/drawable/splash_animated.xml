<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    
    <aapt:attr name="android:drawable">
        <vector
            android:name="splash_vector"
            android:width="288dp"
            android:height="288dp"
            android:viewportWidth="288"
            android:viewportHeight="288">
            
            <!-- Background circle with glow effect -->
            <group android:name="pulse_group"
                android:pivotX="144"
                android:pivotY="144"
                android:scaleX="1"
                android:scaleY="1">
                
                <!-- Outer glow ring -->
                <path
                    android:name="outer_ring"
                    android:pathData="M144,24 A120,120 0 1,1 143.9,24"
                    android:strokeColor="#00d4ff"
                    android:strokeWidth="4"
                    android:strokeAlpha="0.3"
                    android:fillColor="#00000000"/>
                
                <!-- Inner circle background -->
                <path
                    android:name="inner_circle"
                    android:pathData="M144,44 A100,100 0 1,1 143.9,44"
                    android:fillColor="#16213e"
                    android:strokeColor="#00d4ff"
                    android:strokeWidth="6"/>
                    
            </group>
            
            <!-- Rotating decoration -->
            <group android:name="rotate_group"
                android:pivotX="144"
                android:pivotY="144"
                android:rotation="0">
                
                <!-- Decorative arc 1 -->
                <path
                    android:name="arc1"
                    android:pathData="M144,34 A110,110 0 0,1 254,144"
                    android:strokeColor="#00d4ff"
                    android:strokeWidth="3"
                    android:strokeAlpha="0.6"
                    android:fillColor="#00000000"/>
                    
                <!-- Decorative arc 2 -->
                <path
                    android:name="arc2"
                    android:pathData="M144,254 A110,110 0 0,1 34,144"
                    android:strokeColor="#0096ff"
                    android:strokeWidth="3"
                    android:strokeAlpha="0.6"
                    android:fillColor="#00000000"/>
                    
            </group>
            
        </vector>
    </aapt:attr>
    
    <!-- Pulse animation -->
    <target android:name="pulse_group">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="scaleX"
                    android:duration="1200"
                    android:valueFrom="0.9"
                    android:valueTo="1.1"
                    android:valueType="floatType"
                    android:repeatCount="-1"
                    android:repeatMode="reverse"
                    android:interpolator="@android:interpolator/accelerate_decelerate"/>
                <objectAnimator
                    android:propertyName="scaleY"
                    android:duration="1200"
                    android:valueFrom="0.9"
                    android:valueTo="1.1"
                    android:valueType="floatType"
                    android:repeatCount="-1"
                    android:repeatMode="reverse"
                    android:interpolator="@android:interpolator/accelerate_decelerate"/>
            </set>
        </aapt:attr>
    </target>
    
    <!-- Rotation animation -->
    <target android:name="rotate_group">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="rotation"
                android:duration="3000"
                android:valueFrom="0"
                android:valueTo="360"
                android:valueType="floatType"
                android:repeatCount="-1"
                android:interpolator="@android:interpolator/linear"/>
        </aapt:attr>
    </target>
    
</animated-vector>
